{
	"compilerOptions": {
		"strict": true,
		"rootDir": "s",
		"outDir": "x",
		"target": "es2022",
		"lib": ["es2022"],
		"module": "node16",
		"moduleResolution": "node16",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
	},
	"include": [
		"s/**/*.ts",
		"s/**/*.js"
	],
	"exclude": [
		"s/**/_*"
	],
}
